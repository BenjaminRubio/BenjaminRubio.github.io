---
import Link from '@/components/Link.astro'
import ThemeToggle from '@/components/ThemeToggle.astro'
import { NAV_LINKS, SITE } from '@/consts'
import logoSvg from '../../public/static/logo.svg?raw'

const cleanedLogo = logoSvg.replace(/width="[^"]*"|height="[^"]*"/g, '');
---

<div>
  <div
    class="mx-auto flex max-w-3xl items-center justify-between gap-4 px-4 py-3 pt-3"
  >
    <Link href="/" class="flex shrink-0 items-center justify-center gap-3">
      <span class="[&_svg]:size-5 sm:[&_svg]:size-8">
        <Fragment set:html={cleanedLogo} />
      </span>
      <span
        class="hidden h-full text-xl font-medium min-[400px]:block"
        >{SITE.title}</span
      >
    </Link>
    <div class="flex items-center gap-4">
      <nav class="flex items-center gap-4 text-sm sm:gap-6">
        {
          NAV_LINKS.map((item) => (
            <Link
              href={item.href}
              class="text-foreground/60 hover:text-foreground transition-colors"
            >
              {item.label}
            </Link>
          ))
        }
      </nav>
      <ThemeToggle transition:persist />
    </div>
  </div>
</div>
