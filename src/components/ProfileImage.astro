---
import { SITE } from '@/consts';
---

<img
  id="profile-pic"
  src={SITE.profileImage}
  alt="Benjamín Rubio Orellana"
  class="rounded-full w-32 h-32 md:w-40 md:h-40 object-cover border cursor-pointer transition-transform hover:scale-101"
/>

<!-- Image Modal -->
<div id="image-modal" class="modal-overlay">
  <img src={SITE.profileImage} alt="Benjamín Rubio Orellana enlarged" class="modal-image"/>
</div>

<style>
  .modal-overlay {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.8);
    display: none;
    justify-content: center;
    align-items: center;
    z-index: 1000;
    cursor: pointer;
    opacity: 0;
    transition: opacity 0.3s ease-in-out;
  }
  .modal-overlay.show {
    display: flex;
    opacity: 1;
  }
  .modal-image {
    max-width: 90vw;
    max-height: 90vh;
    border-radius: 50%;
    transform: scale(0.8);
    transition: transform 0.3s ease-in-out;
  }
  .modal-overlay.show .modal-image {
    transform: scale(1);
  }
</style>

<script>
  function initImageModal() {
    const profilePic = document.getElementById('profile-pic');
    const modal = document.getElementById('image-modal');

    if (profilePic && modal) {
      profilePic.addEventListener('click', () => {
        modal.classList.add('show');
      });

      modal.addEventListener('click', () => {
        modal.classList.remove('show');
      });
    }
  }

  initImageModal();
  document.addEventListener('astro:after-swap', initImageModal);
</script>
